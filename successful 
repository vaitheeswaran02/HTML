    <script>
        function login() {
            let user = document.getElementById("username").value;
            let pass = document.getElementById("password").value;

            if (user === "" || pass === "") {
                alert("Login Failed  â€” Please enter both fields");
            } else {
                alert("Login Successfully ");
            }
        }
    </script>

